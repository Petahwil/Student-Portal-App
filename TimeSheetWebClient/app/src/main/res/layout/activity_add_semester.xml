<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_semester"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.samjc.timesheetwebclient.AddSemesterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/current_semester_details"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="@dimen/sub_text_size"
                android:id="@+id/start_date"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="@dimen/sub_text_size"
                android:id="@+id/end_date"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="@dimen/sub_text_size"
                android:id="@+id/num_weeks"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="@dimen/sub_text_size"
                android:id="@+id/curr_email"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/semester_start"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                        <DatePicker
                            android:id="@+id/StartDatePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:datePickerMode="spinner"
                            android:headerBackground="@color/colorPrimary"
                            android:spinnersShown="true"
                            android:calendarViewShown="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/semester_end"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold" />

                        <DatePicker
                            android:id="@+id/EndDatePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:datePickerMode="spinner"
                            android:headerBackground="@color/colorPrimary"
                            android:spinnersShown="true"
                            android:calendarViewShown="false"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/edit_semester_button"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/sub_text_size"
                android:layout_marginTop="20dp"
                android:text="@string/change_current_semester_dates" />

            <Button
                android:id="@+id/new_semester_button"
                android:layout_width="@dimen/add_semester_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="85dp"
                android:paddingRight="85dp"
                android:text="@string/create_new_semester"
                android:textSize="@dimen/sub_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update_admin_email"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email_change"
                android:layout_width="@dimen/add_semester_width"
                android:layout_height="wrap_content"
                android:hint="@string/new_admin_email"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/sub_text_size"
                android:visibility="visible" />

            <Button
                android:id="@+id/email_button"
                android:layout_width="@dimen/add_semester_width"
                android:layout_height="wrap_content"
                android:text="@string/update_admin_email"
                android:textSize="@dimen/sub_text_size" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
